{% extends 'base.html.twig' %}

{% block title %}TrainingRequest index{% endblock %}

{% block body %}
    <h1>TrainingRequest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>DateRequest</th>
                <th>Note</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for training_request in training_requests %}
            <tr>
                <td>{{ training_request.id }}</td>
                <td>{{ training_request.name }}</td>
                <td>{{ training_request.firstname }}</td>
                <td>{{ training_request.mail }}</td>
                <td>{{ training_request.phone }}</td>
                <td>{{ training_request.dateRequest ? training_request.dateRequest|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ training_request.note }}</td>
                <td>{{ training_request.status }}</td>
                <td>
                    <a href="{{ path('training_request_show', {'id': training_request.id}) }}">show</a>
                    <a href="{{ path('training_request_edit', {'id': training_request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('training_request_new') }}">Create new</a>
{% endblock %}
